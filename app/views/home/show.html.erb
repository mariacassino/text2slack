<center><h1>Text2Slack</h1></center>



<br><br>
<div class="form-group">
  <div class="col-xs-6 col-sm-offset-3">
    <div class="input-group">

      <% if @user %>
        <%= "Hello Slack-er!" %><br><br>
        <%= "To begin sending texts to Slack, enter your phone number (beginning with +1) and choose your channel:" %>
        <%= bootstrap_form_for @user, url: "/home/1", method: "patch", :html => {:class => "form-horizontal center"} do |f| %>
          <%= f.text_field :phone, class: "form-control" %>
          <%= f.collection_select :channel, @channel_list, :to_s, :to_s%>
          <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
